# Main screenrc.
# Used for work in the terminal, and communication applications.

source ~/.screen/base.screenrc

# Initial screens.
screen -t bash	 1	bash	# Bash shell.
screen -t cmus	 8	bash -i -c cmus	# Cmus (Music player).
screen -t mutt	 9	mutt	# Mutt (Email client).
#screen -t irssi	10	irssi	# Irssi (IRC client).
select 1		# Select 1.

